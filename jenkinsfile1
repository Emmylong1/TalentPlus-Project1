pipeline {

    agent any
 
    stages{

        stage("Git checkout"){

            steps{
                git branch: 'main', url: 'https://github.com/Emmylong1/demo-counter-app-1.git'
            }
        }
        stage("UNIT Testing"){

            steps{
                sh "mvn test"
                
            }
        }

        stage("integration testing "){

            steps{
                sh "mvn verify -DskipunitTest"
                
            }
        }

        stage("Maven Build"){

            steps{
                sh "mvn clean install"
            }
        }

         stage("SonarQube analysis"){

            steps{
                script{
                 withSonarQubeEnv(credentialsId: 'sonarqube-api-key') {
                    sh 'mvn clean package sonar:sonar'
                    }
                }
               
            }
        }

        stage("Qaulity Gate status"){
            steps{
                scripts{
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonarqube-api-key'
                  }
            }
        }   

    }
} 
